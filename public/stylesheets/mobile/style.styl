default_font = 15px Helvetica, "Lucida Grande", Arial, sans-serif

body
    font default_font
    background-color darkGrey
    margin 0
    padding 0
  
h1
    padding 0
    margin 0 0 5px 0
    font 14px Helvetica, "Lucida Grande", Arial, sans-serif
    font-size 1.5em
  
h4
    font-size 13px
  
code
    word-wrap break-word
    font-size 10px
  
center#social-media
    margin 3px 0 0 3px

    button.install_local
        display block

        width 150px
        margin 0 auto
        padding 5px

        color black
        font-size 18px
        font-weight bold
        background none//firefox renders no gradient automatically with this
        background-color white
        border 1px solid black
        border-radius 7px

// Windows
div.page-state
    width 98%
    height 8px

div.main-box, div.menu-container
    width 99%
    background-color white
    border 1px solid black
    border-radius 0 0 15px 15px
  
// Menu
div.menu-container
    border-radius 15px 15px 0 0
    width 99%
    
    div
        margin 0 auto
        width 305px
        padding 0
    
        div.menu-box
            display inline-block
            padding 5px 5px 2px 5px
            width 50px

            a
                text-decoration: none
                color: black
            
                div.menu-icon
                    border solid 1px black
                    border-radius 12px
                    height 45px
                    width 100%
              
                div.menu_icon:first-child
                    margin-left 2px

// Generics
div.title_bar
    text-align center
    width 100%
    margin-top 5px
  
div.text_wrapper
    width 90%
    text-align center
  
h3.vertical_title, h4.vertical_title
    padding 0
    margin 0 0 0px 0
    display inline-block
    background-color white
    
button.collapser
    display inline
    vertical-align middle
    width 40px
    height 34px
    margin-top 10px
    float right
   
    border 0
    background none//firefox renders no gradient automatically with this
    background-color transparent
    
    p
        display inline
        margin-top 0
        font-size 2.75em
    
button.small
    height 40px
    width 40px
    font-size 50px

center.top-info
    color white
    
    span
        a
            color white

// bottom social media buttons
center
    img
        float left
        width 30px
        height 30px
        padding-right 2px
      
cite
    float top
    color white
    a
        color white
  
// Home specific

div.main_picture
    border-radius 7px
    box-shadow inset 0px 0px 5px rgba(0,0,0,1)
    border 1px solid black
    width 90%
    height 175px
  
img.mainImage
    border-radius 7px
    width 100%
    height 100%
  
p.home
    background-color white
    text-align left
    margin-bottom 15px
    
p.specialties
    margin 0
    padding 0
    font-size 1.25em
    font-weight bold
    text-align left

ul.specialties
    padding 0 0 0 50px
    margin 0 0 15px 0
    text-align left
    
    ul.specialties li:first-child
          margin 10px 0

// Page options bar
div.page-options
    background-color white
    border-top 1px solid black
    border-left 1px solid black
    border-radius 6px 0 0 0
    
    bottom 0
    right 0
    position fixed
    
    div.to-top
        display inline-block
        padding 16px 9px 16px 9px
        border-right 1px solid black
        font default_font //font can affect borders so must set here
      
    div.page-options-inner
        display inline-block
        padding 2px 2px 0px 3px
        
        span.text-change
            font-weight bold
            font default_font //This overrides inherited font changes
            margin-top 10px
            display inline-block
        
        button.text-change, button.text-change_selected
            display inline-block
            margin 5px 4px 7px 4px
            padding 7px
            border 1px solid black
            border-radius 6px
            background none//firefox renders no gradient automatically with this
            background-color white
            font default_font
          
        button.text-change-selected
            border 2px solid black
            font-weight bold
            background-color lightBlue
      
div.safety-space
    height 65px

// Utilities
#home
    background-color lightBlue
#skills
    background-color #E5AB47
#experience
    background-color #C4B891
#demos
    background-color #98D398;
#blog
    background-color #A05B5B;

skills_color = #E5AB47

#home_color
    color lightBlue
#skills_color
    color skills_color
#skills_border_color
    border-color skills_color
#experience_color
    color #C4B891
#demos_color
    color #98D398
#blog_color
    color #A05B5B

hr
    background-color black
    border none
    height 2px

hr.clear, .clear, hr.clear.experience
    padding 0
    margin 0
    clear both
  
span.main
    font-weight bold
  
div.main_picture, div.text_wrapper, div.main-box, div.menu-container, div.page-state,
div.skills.section, div.demos.section, div.blog.section,
div.menu_center, div.menu_icon
    margin-left auto
    margin-right auto
   
.no_margin
    margin 0

.no-padding
    padding 0
  
.left_align
    text-align: left
    background-color: white

.float_right
    float: right
  
.no-display
    display: none
    
// Firefox Mobile renders text in buttons way too large so I will have to adjust that later
button.collapser

    p.firefox_button
        float: left
        margin-top: 13px
        font-size: 1.5em